@model IList<WorkOrderDailyReportViewModel>

    <div class="row ltr">
        @if (Model != null)
        {
            @if (Model.Count > 0)
            {
                <div class="timeline">

                    @for (int i = 0; i <= Model.Count - 1; i++)
                    {
                        <div class="containerTL @(i%2==0?"leftTL":"rightTL")">
                            <div class="contentTL rtl">
                                <h5>@(new PersianDateTime(Model[i].ReportDate).ToLongDateTimeString())</h5>
                                <p>@Model[i].ReportComment</p>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger">اطلاعاتی یافت نشد</div>
            }
        }
    </div>
