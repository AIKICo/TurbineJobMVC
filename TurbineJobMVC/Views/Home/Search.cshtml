@model IList<TahvilFormsViewModel>

@{
    ViewData["Title"] = "اقلام تحویلی...";
}

@if (Model != null)
{
    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="alert alert-info mx-auto">
                <b>@Model.First().DeliverCode</b><span> به شماره پرسنلی <b>@Model.First().RegisterNo</b></span><span> اطلاعات اموال تحویلی شما به شرح ذیل می باشد</span>
            </div>
        </div>

        <div class="row">
            <table class="table table-bordered table-hover searchcard text-center">
                <thead class="thead-dark ">
                    <tr>
                        <th class="border border-white text-center " scope="col">*</th>
                        <th class="border border-white text-center" scope="col">نوع</th>
                        <th class="border border-white text-center" scope="col">شماره اموال</th>
                        <th class="border border-white text-center" scope="col">درخواست فعال</th>
                        <th class="border border-white text-center" scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in Model)
                    {
                    <tr class="border border-white">
                        <td><i class="@form.Icon"></i></td>
                        <td>@form.PartName</td>
                        <td>@form.AmvalNo</td>
                        <td>
                            @if (form.ActiveWono != null)
                            {
                                <a asp-controller="Home" asp-action="WorkOrderReport" asp-route-WonoSearch="@form.ActiveWono" class="btn btn-link">@form.ActiveWono</a>
                            }
                        </td>
                        <td>
                           
                            <div class="btn-group" role="group">
                                @if (form.ActiveWono == null)

                                {
                                    <a type="button" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="ثبت درخواست کار جدید" asp-controller="Home" asp-action="IndexByAR" asp-route-id="@form.AmvalNo"><i class="fas fa-user-edit fa-lg"></i></a>
                                    <a type="button" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="ثبت مغایرت اموال" asp-controller="Home" asp-action="IndexByARConflict" asp-route-id="@form.AmvalNo" ><i class="fas fa-exclamation-circle fa-lg"></i></a>
                                 }
                                    <a type="button" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="مشاهده سابقه درخواست ها"  asp-controller="Home" asp-action="IndexByAR" asp-route-id="@form.AmvalNo"><i class="fas fa-archive fa-lg"></i></a>
                            </div>
                            
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <partial name="footer" />
        </div>
    }
    else
    {
        <div class="alert alert-danger">اطلاعاتی یافت نشد</div>
        <partial name="footer" />
    }
}





